<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBakckground"
    android:orientation="vertical"
    tools:context="com.nohseunghwa.gallane.GallaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <include layout="@layout/assistance_line_accent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorButtonFace">

            <TextView
                android:id="@+id/input_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorButtonFace"
                android:padding="4dp"
                android:text="대상 입력"/>

            <TextView
                android:id="@+id/add_button_menu"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:soundEffectsEnabled="true"
                android:text="="
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/add_button_at"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:soundEffectsEnabled="true"
                android:text="\@"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/add_button_through"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:soundEffectsEnabled="true"
                android:text="~"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/add_button_comma"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:soundEffectsEnabled="true"
                android:text=","
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/add_button_bat"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:soundEffectsEnabled="true"
                android:text="!"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/add_button_slash"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:soundEffectsEnabled="true"
                android:text=":"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="금액:이름!배율,..."
                android:inputType="text"/>
        </ScrollView>

        <include layout="@layout/assistance_line_accent"></include>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorButtonFace"
            android:padding="4dp"
            android:text="계산 단위"/>

        <include layout="@layout/assistance_unit_limit"/>

        <include layout="@layout/assistance_line_accent"/>

        <TextView
            android:id="@+id/information_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorButtonFace"
            android:padding="4dp"
            android:text="입력예시/계산결과"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/result_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

        </ScrollView>

    </LinearLayout>

    <include layout="@layout/assistance_line_accent"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/init_button"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_margin="4dp"
            android:background="@color/colorButtonFace"
            android:text="초기화"/>

        <Button
            android:id="@+id/calc_button"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="4dp"
            android:background="@color/colorButtonFace"
            android:text="계산"/>
    </LinearLayout>

</LinearLayout>
